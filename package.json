{
  "name": "@semantic-release/cli",
  "description": "automated semver compliant package publishing",
  "author": "Stephan BÃ¶nnemann <stephan@boennemann.me>",
  "bin": {
    "semantic-release": "./bin/semantic-release.js"
  },
  "bugs": {
    "url": "https://github.com/semantic-release/cli/issues"
  },
  "dependencies": {
    "async": "^1.2.1",
    "base32": "0.0.6",
    "github-url-from-git": "^1.4.0",
    "ini": "^1.3.4",
    "inquirer": "^0.8.5",
    "lodash": "^3.9.3",
    "nopt": "^3.0.2",
    "npm-registry-client": "^6.4.0",
    "npmconf": "^2.1.2",
    "npmlog": "^1.2.1",
    "parse-github-repo-url": "^1.0.0",
    "request": "^2.58.0",
    "validator": "^3.40.1"
  },
  "devDependencies": {
    "standard": "^4.2.1",
    "tap": "^1.2.0"
  },
  "engines": {
    "iojs": "^1",
    "node": "^0.10",
    "npm": "^2"
  },
  "homepage": "https://github.com/semantic-release/cli",
  "keywords": [
    "author",
    "automation",
    "changelog",
    "module",
    "package",
    "publish",
    "release",
    "semver",
    "version"
  ],
  "license": "MIT",
  "main": "dist/main.js",
  "optionalDependencies": {
    "babel": "^5.5.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boennemann/semantic-release.git"
  },
  "scripts": {
    "build": "rm -rf dist && mkdir -p dist && babel src --out-dir dist",
    "build:tests": "rm -rf .tests && mkdir -p .tests && babel tests --out-dir .tests",
    "coverage": "nyc report",
    "coveralls": "npm run coverage -- --reporter=lcovonly && cat coverage/lcov.info | coveralls",
    "postpublish": "./bin/semantic-release.js post",
    "prepublish": "npm run build && ./bin/semantic-release.js pre",
    "pretest": "npm run build && npm run build:tests",
    "test": "standard && tap .tests"
  },
  "standard": {
    "ignore": [
      "bin",
      ".tests",
      "dist"
    ]
  }
}
